{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "*"
      ]
    },
    "checkJs": true,
  },
  "include": [
    "src/**/*",
    ".storybook/**/*",
    ".cypress/**/*",
    ".*"
  ],
  "exclude": [
    "node_modules",
    ".storybook/static/mockServiceWorker.js"
  ]
}