{
  "name": "mithril-template",
  "version": "1.0.0",
  "description": "A sample notepad application in Mithril and Bulma.",
  "main": "mithril-template",
  "scripts": {
    "start": "webpack serve --mode development --open",
    "watch": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint-fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "stylelint": "stylelint 'src/**/*.{css,scss,json}'",
    "stylelint-fix": "stylelint --fix 'src/**/*.{css,scss}'",
    "test": "cypress run",
    "test-debug": "DEBUG=cypress:* cypress run",
    "cypress": "cypress open",
    "storybook": "start-storybook -p 9090 -s .storybook/static"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/josephspurrier/mithril-template.git"
  },
  "author": "Joseph Spurrier",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-controls": "^6.2.9",
    "@storybook/addon-docs": "^6.2.9",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/js-cookie": "^2.2.6",
    "@types/mini-css-extract-plugin": "^1.4.2",
    "@types/mithril": "^2.0.7",
    "bulma": "^0.9.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^4.2.2",
    "file-loader": "^6.2.0",
