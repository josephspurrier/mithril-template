    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-mithril": "^0.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.2.1",
    "stylelint": "^13.13.0",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.19.0",
    "webpack-dev-server": "^3.11.2"
