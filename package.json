    "html-webpack-plugin": "^4.5.1",
    "js-cookie": "^2.2.1",
    "mini-css-extract-plugin": "^1.5.0",
    "mithril": "^2.0.4",
    "msw": "^0.28.2",
    "node-sass": "^5.0.0",
    "sass-loader": "^10.1.1",
    "source-map-loader": "^1.1.0",
    "ts-loader": "^8.2.0",
    "typescript": "^4.2.4",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.6.0"
